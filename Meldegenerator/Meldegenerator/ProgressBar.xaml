<UserControl x:Class="ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Meldegenerator" 
             mc:Ignorable="d"    Initialized="UserControl_Initialized" 
            >
    <Grid>
        <Rectangle  RadiusX="10" RadiusY="10" Height="40" Fill="#222229" MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"  ></Rectangle>
        <ProgressBar Padding="2" Margin="10" Name="PGBarDaten"  Height="35" Maximum="100" Minimum="0"></ProgressBar>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label   Name="LBAnzahlTITEL"  BorderBrush="Transparent" FontFamily="Arial"  IsEnabled="True">0</Label>
        </StackPanel>

    </Grid>
</UserControl>
